<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagep1c1"
            android:layout_width="70dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/imagep1c2"
            android:layout_width="70dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/imagep1c3"
            android:layout_width="70dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/imagep1c4"
            android:layout_width="70dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/imagep1c5"
            android:layout_width="70dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/back" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagep2c1"
            android:layout_width="70dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/imagep2c2"
            android:layout_width="70dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/imagep2c3"
            android:layout_width="70dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/imagep2c4"
            android:layout_width="70dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/imagep2c5"
            android:layout_width="70dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/back" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/dealButton"
            android:text="DEAL"/>

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/compareButton"
            android:text="COMPARE"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Player 1:"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Player 2:"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/player1Cards"
            android:lines="5"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/player2Cards"
            android:lines="5"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hand Values:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/player1Result"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/player2Result"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pokerResult"/>
    </LinearLayout>

</LinearLayout>